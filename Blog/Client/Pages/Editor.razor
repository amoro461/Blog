@page "/editor"
@namespace Blog.Client.Pages

<PageTitle>Editor</PageTitle>

<body>
    <nav class="navbar">
        <img src="../img/logo.png" class="logo" alt="" height="80px">
        <ul class="links-container">
            <li class="link-item">
                <NavLink href="/">
                    <span class="link">home</span>
                </NavLink></li>
            <li class="link-item">
                <NavLink href="editor">
                    <span class="link">editor</span>
                </NavLink>
            </li>
        </ul>
    </nav>
    <div class="banner">
        <input type="file" accept="image/*" id="banner-upload" hidden>
        <label for="banner-upload" class="banner-upload-btn"><img src="../img/upload.jpg" alt="upload banner"
                height="50px"></label>
    </div>
    <div class="blog">
        <textarea type="text" class="title" placeholder="Blog title..."></textarea>
        <textarea type="text" class="article" placeholder="Start writing..."></textarea>
    </div>

    <div class="blog-options">
        <button class="btn dark publish-btn">publish</button>
        <input type="file" accept="image/*" id="image-upload" hidden>
        <label for="image-upload" class="btn grey upload-btn">Upload Image</label>
    </div>
</body>